<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_data_card"
    android:backgroundTint="@color/gray"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_ps"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ps_name"
            android:layout_width="match_parent"
            android:textColor="@color/use_blue"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:fontFamily="@font/quicksand_medium"
            android:layout_height="0dp"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/ps_number"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:fontFamily="@font/quicksand_medium"
            android:layout_height="match_parent"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/wp"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_wp1"/>

            <ImageView
                android:id="@+id/share"
                android:layout_width="23dp"
                android:layout_height="25dp"
                android:layout_marginStart="11dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_share2"
                app:tint="#FF7F5C" />

            <ImageView
                android:id="@+id/call"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_call_btn"
                />

            <ImageView
                android:id="@+id/sms"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="11dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_sms1"
                app:tint="@color/use_orange" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="13dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_"
                app:tint="#FF7F5C" />
        </LinearLayout>


    </LinearLayout>



</LinearLayout>